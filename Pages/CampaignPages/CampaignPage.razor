@page "/campaign/{campaignId}"
@using DnD_Combat_Turn_Tracker.Components

<MudContainer Class="pt-16 px-8" MaxWidth="MaxWidth.False" Style="height: 100%">
    <MudGrid Style="height: 100%" Spacing="0">
        <MudItem xs="12" sm="12" md="9" Style="display: flex;">
            @if (campaign == null)
            {
                <CampaignInfoHeaderPlaceholder></CampaignInfoHeaderPlaceholder>
            }
            else
            {
                <CampaignInfoHeader Campaign="campaign" ReadOnly="false"></CampaignInfoHeader>
            }
        </MudItem>
        <MudItem xs="12" sm="12" md="3" Style="height: 100%">
            <MudPaper Elevation="3" Class="pa-4" Style="height: 100%; min-height: 516px;"></MudPaper>
        </MudItem>
    </MudGrid>
</MudContainer>